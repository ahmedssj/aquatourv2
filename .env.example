# ===========================================
# CONFIGURACIÓN DE VARIABLES DE ENTORNO - FLUTTER
# ===========================================
# Copia este archivo como .env y configura los valores según tu entorno

# ===========================================
# CONFIGURACIÓN DE API
# ===========================================
# URL de tu API REST (cambiar según el entorno)
API_BASE_URL=https://aquatour-crm-api.vercel.app/api
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# URLs para diferentes entornos
DEV_API_URL=http://localhost:3000/api
PROD_API_URL=https://aquatour-crm-api.vercel.app/api
STAGING_API_URL=https://aquatour-crm-staging.vercel.app/api

# ===========================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ===========================================
APP_ENV=development
APP_NAME=AquaTour CRM
APP_VERSION=1.0.0
COMPANY_NAME=AquaTour
DEBUG=true

# ===========================================
# CONFIGURACIÓN DE AUTENTICACIÓN
# ===========================================
# Roles permitidos para login (solo administrativos)
ALLOWED_ROLES=superadministrador,administrador,asesor
TOKEN_STORAGE_KEY=aquatour_auth_token
REFRESH_TOKEN_KEY=aquatour_refresh_token
USER_DATA_KEY=aquatour_user_data

# Configuración de sesión
SESSION_TIMEOUT=3600000
AUTO_LOGOUT_WARNING=300000
REMEMBER_ME_DURATION=604800000

# ===========================================
# CONFIGURACIÓN DE UI/UX
# ===========================================
THEME_MODE=light
PRIMARY_COLOR=0xFF1976D2
ACCENT_COLOR=0xFF03DAC6
ERROR_COLOR=0xFFB00020

# Configuración de animaciones
ENABLE_ANIMATIONS=true
ANIMATION_DURATION=300
SPLASH_DURATION=2000

# ===========================================
# CONFIGURACIÓN DE ALMACENAMIENTO LOCAL
# ===========================================
ENABLE_LOCAL_STORAGE=true
LOCAL_STORAGE_PREFIX=aquatour_
CACHE_DURATION=86400000
MAX_CACHE_SIZE=50

# ===========================================
# CONFIGURACIÓN DE LOGS Y DEBUGGING
# ===========================================
ENABLE_LOGGING=true
LOG_LEVEL=info
ENABLE_CRASH_REPORTING=false
ANALYTICS_ENABLED=false

# ===========================================
# CONFIGURACIÓN DE CONECTIVIDAD
# ===========================================
ENABLE_OFFLINE_MODE=true
SYNC_INTERVAL=300000
CONNECTION_TIMEOUT=10000
RETRY_DELAY=2000

# ===========================================
# CONFIGURACIÓN DE SEGURIDAD
# ===========================================
ENABLE_BIOMETRIC_AUTH=false
ENABLE_PIN_LOCK=false
AUTO_LOCK_TIMEOUT=300000
SECURE_STORAGE=true

# ===========================================
# CONFIGURACIÓN PARA VERCEL DEPLOY
# ===========================================
VERCEL_ENV=production
BUILD_COMMAND=flutter build web --release
OUTPUT_DIRECTORY=build/web
INSTALL_COMMAND=flutter pub get
